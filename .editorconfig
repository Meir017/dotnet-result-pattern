root = true

# All files
[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
end_of_line = lf

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
end_of_line = lf

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
end_of_line = lf

# JSON files
[*.json]
indent_size = 2
end_of_line = lf

# YAML files
[*.{yml,yaml}]
indent_size = 2
end_of_line = lf

# Markdown files
[*.md]
trim_trailing_whitespace = false
end_of_line = lf

# Shell scripts
[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf
